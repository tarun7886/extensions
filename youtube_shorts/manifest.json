{
  "manifest_version": 3,
  "name": "YouTube Shorts to Video",
  "version": "1.0",
  "description": "Never rewatch the full short again, watch Shorts with all the features of a regular video; rewind, forward, and playback speed",
  "icons": {
    "128": "icon_128.png",
    "48": "icon_48.png",
    "16": "icon_16.png"
  },
  "action": {
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js",
    "matches": ["https://www.youtube.com/shorts/*"]
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+E",
        "mac": "Command+E"
      }
    }
  }
}
